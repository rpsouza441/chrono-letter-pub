# ========================================
# Chrono Letter - Environment Variables
# ========================================
# Copie este arquivo para .env e preencha os valores
# NUNCA commite o .env com valores reais!

# ----------------------------------------
# Application
# ----------------------------------------
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ----------------------------------------
# Database (PostgreSQL)
# ----------------------------------------
DATABASE_URL=jdbc:postgresql://localhost:5432/chronoletter_dev
DATABASE_USERNAME=chrono
DATABASE_PASSWORD=change_me_in_production
DATABASE_POOL_SIZE=10

# ----------------------------------------
# Email Provider
# ----------------------------------------
# Provider: smtp (default) ou ses (futuro)
EMAIL_PROVIDER=smtp

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_AUTH=false
SMTP_STARTTLS=false

# Remetente
MAIL_FROM=noreply@chronoletter.app
MAIL_FROM_NAME=Chrono Letter

# AWS SES (se EMAIL_PROVIDER=ses)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# ----------------------------------------
# OAuth2 (Google)
# ----------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ----------------------------------------
# Scheduling
# ----------------------------------------
# Hora local para envio (0-23)
SEND_HOUR_LOCAL=10

# Dias máximos para retry antes de marcar FAILED
RETRY_DEADLINE_DAYS=2

# ----------------------------------------
# Security / Encryption
# ----------------------------------------
# Caminho para master key (KEK) - Docker secret em prod
MASTER_KEY_SECRET_PATH=/run/secrets/master_key

# Versão da KEK (incrementar ao rotacionar)
KEK_VERSION=1

# ----------------------------------------
# Frontend
# ----------------------------------------
FRONTEND_URL=http://localhost:3000

# ----------------------------------------
# CORS (produção)
# ----------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
